<?xml version="1.0" encoding="UTF-8"?>
<Properties>
    <Property name="LOG_PATH">${sys:user.home}/seerBotAdmin/logs</Property>

    <Property name="LOG_PATTERN">
        %d{yyyy-MM-dd HH:mm:ss.SSS} %5p ${hostName} --- [%15.15t] %-40.40c{1.} : %m%n%ex
    </Property>

    <Property name="appsDebugLogsFilename">${LOG_PATH}/appDebug.log</Property>
    <Property name="appsDebugLogsFilenamePattern">${LOG_PATH}/appDebug-%d{yyyy-MM-dd}.log.gz</Property>

    <Property name="appsErrorLogsFilename">${LOG_PATH}/appError.log</Property>
    <Property name="appsErrorLogsFilenamePattern">${LOG_PATH}/appError-%d{yyyy-MM-dd}.log.gz</Property>

    <Property name="vendorErrorLogsFilename">${LOG_PATH}/vendorError.log</Property>
    <Property name="vendorErrorLogsFilenamePattern">${LOG_PATH}/vendorError-%d{yyyy-MM-dd}.log.gz</Property>

    <Property name="vendorInfoLogsFilename">${LOG_PATH}/vendorInfo.log</Property>
    <Property name="vendorInfoLogsFilenamePattern">${LOG_PATH}/vendorInfo-%d{yyyy-MM-dd}.log.gz</Property>
</Properties>