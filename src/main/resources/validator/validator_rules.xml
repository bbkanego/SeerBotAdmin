                </var>
            </field>
            <field id="botCat" property="category" depends="required,containsChars">
                <var>
                    <var-name>regEx</var-name>
                    <var-value>^[a-zA-Z0-9-_]+$</var-value>
                </var>
            </field>
            <field id="botStatus" property="status" depends="required,containsChars">
                <var>
                    <var-name>regEx</var-name>
                    <var-value>^[a-zA-Z0-9-_]+$</var-value>
                </var>
            </field>
            <field id="botSupportedLanguages" property="supportedLanguages" depends="required,containsChars">
                <var>
                    <var-name>regEx</var-name>
                    <var-value>^[a-zA-Z0-9-_]+$</var-value>
                </var>
            </field>
        </form>

