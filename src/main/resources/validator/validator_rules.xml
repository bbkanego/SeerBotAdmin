        <form name="validateBotRule" classType="com.seerlogics.commons.model.Bot">
            <field id="botName" property="name" depends="required,containsChars,validateMaxLength">
                <var>
                    <var-name>maxLength</var-name>
                    <var-value>50</var-value>
                </var>
                <var>
                    <var-name>regEx</var-name>
                    <var-value>^[a-zA-Z0-9-_\s]+$</var-value>
                </var>
            </field>
            <field id="botDisplayName" property="displayName" depends="required,containsChars,validateMaxLength">
                <var>
                    <var-name>maxLength</var-name>
